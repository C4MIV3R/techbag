<div class="container">
  <div class="row">
    <div class="six columns">
      <h2>Login</h2>
      <form class="" action="/users/login" method="post">
        <label for="username">Username: </label>
        <input class="u-full-width" type="text" name="username" value="" placeholder="Username">
        <label for="password">Password: </label>
        <input class="u-full-width" type="password" name="password" value="" placeholder="Password">
        <button type="submit" name="button">Login</button>
      </form>
    </div>
    <div class="six columns">
      <h2>Register</h2>
      <form class="" action="/users/register" method="post">
        <label for="username">Username: </label>
        <input class="u-full-width" type="text" name="username" value="" placeholder="Username">
        <label for="email">Email address: </label>
        <input class="u-full-width" type="email" name="email" value="" placeholder="Email address">
        <label for="password">Password: </label>
        <input class="u-full-width" type="password" name="password_hash" value="" placeholder="Password">
        <button type="submit" name="button">Register</button>
      </form>
    </div>
  </div>
</div>
